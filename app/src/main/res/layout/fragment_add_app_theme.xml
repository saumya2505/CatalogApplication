<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AddAppTheme"
    android:orientation="vertical"
    android:padding="50dp">

 <EditText
     android:id="@+id/ETappThemeName"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Enter Theme Name"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Color Primary Dark"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TVcolPriDarkFill"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose Color...."
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Color Primary"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TVcolPriFill"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose Color...."
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Color Emphasis"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TVcolEmphasisFill"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose Color...."
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Font Color Dark"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TVcolFontDarkFill"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose Color...."
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Font Color Light"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TVcolFontLightFill"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose Color...."
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Theme"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

</LinearLayout>